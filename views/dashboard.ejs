<!DOCTYPE html>
<html lang="en">
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>Dashboard</title>

    <!-- Fonts -->
    <link
      rel="stylesheet"
      href="assets/plugins/font-awesome/4.7.0/css/font-awesome.min.css"
    />

    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    />

    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700"
    />

    <!-- Styles -->
    <link
      rel="stylesheet"
      href="assets/plugins/bootstrap/css/bootstrap.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Bad+Script&amp;display=swap"
      rel="stylesheet"
    />

    <style type="text/css">
      .navbar-header {
        font-family: "Bad Script", sans-serif !important;
      }
    </style>
  </head>
  <body id="app-layout">
    <nav class="navbar navbar-inverse navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <!-- Collapsed Hamburger -->
          <button
            type="button"
            class="navbar-toggle collapsed"
            data-toggle="collapse"
            data-target="#app-navbar-collapse"
          >
            <span class="sr-only">Toggle Navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

          <!-- Branding Image -->
          <a class="navbar-brand" href="/">
            <i class="fa fa-id-card fa-lg text-success"></i> Password Managment
          </a>
        </div>

        <div class="collapse navbar-collapse" id="app-navbar-collapse">
          <!-- Left Side Of Navbar -->

          <!-- Right Side Of Navbar -->
          <ul class="nav navbar-nav navbar-right">
            <li class="nav navbar-nav">
              <a href="/passwordCategory"> Password Category</a>
            </li>

            <li class="nav navbar-nav">
              <a href="/passwordDetails"> Password Details</a>
            </li>

            <li class="nav navbar-nav">
              <a href="/dashboard"> Hello <%= loginUser %></a>
            </li>

            <!-- Authentication Links -->
            <li>
              <a href="/logout"> <i class="fa fa-sign-in"></i> LogOut</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <h2 class="text-center"><%= title %></h2>
    <br /><br />

    <div class="container">
      <div class="container">
        <div class="row">
          <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-primary">
              <div class="panel-heading">User Information</div>
              <div class="panel-body">
                <div class="col-md-6">
                  <h3>Name: <%=record.name%></h3>
                  <h3>Email: <%=record.email%></h3>
                </div>
                <div class="col-md-6">
                  <a
                    class="btn btn-danger"
                    href="dashboard/delete/<%=record._id%>"
                    >Delete Account</a
                  >
                  <a
                    class="btn btn-primary "
                    href="dashboard/edit/<%=record._id%>"
                    >Edit Account</a
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--PasswordDetails-->
    <div class="container">
      <div class="container">
        <div class="row">
          <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-primary">
              <div class="panel-heading">Password Details List</div>
              <div class="panel-body">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th scope="col">Category Name</th>
                      <th scope="col">Project Name</th>
                      <th scope="col">Show</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% data.forEach(function(row){ %>
                    <tr>
                      <td><%= row.addPasswordCategory %></td>
                      <td><%= row.projectName %></td>
                      <td>
                        <button
                          type="button"
                          class="btn btn-primary"
                          data-toggle="modal"
                          data-target="#myModal<%= row._id %>"
                        >
                          <i class="fa fa-eye" aria-hidden="true"></i>
                        </button>
                      </td>
                    </tr>
                    <!-- Modal -->
                    <div
                      class="modal fade"
                      id="myModal<%= row._id %>"
                      tabindex="-1"
                      role="dialog"
                      aria-labelledby="exampleModalLabel"
                      aria-hidden="true"
                    >
                      <div class="modal-dialog" role="document">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">
                              <%= row.projectName %>
                            </h5>
                            <button
                              type="button"
                              class="close"
                              data-dismiss="modal"
                              aria-label="Close"
                            >
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                          <div class="modal-body">
                            <p><%= row.passwordDatail %></p>
                          </div>
                          <div class="modal-footer">
                            <button
                              type="button"
                              class="btn btn-danger"
                              data-dismiss="modal"
                            >
                              Close
                            </button>
                          </div>
                        </div>
                      </div>
                    </div>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- JavaScripts -->
    <script src="assets/plugins/jquery/jquery.js"></script>
    <script src="assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="assets/plugins/intercooler-js/intercooler.js"></script>
  </body>
</html>
